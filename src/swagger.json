  "components": {
    "schemas": {
      "AddPatientRequest": {
        "allOf": [
          {
            "$ref": "#/components/schemas/AddPatientRequest"
          },
          {
            "type": "object",
            "required": [
              "email"
            ],
            "properties": {
              "email": {
                "type": "string",
                "format": "string"
              }
            }
          }
        ]
      },
      "SignupAPIRequest": {
        "title": "Signup API Request",
        "required": ["email", "password", "full_name"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "full_name": {
            "type": "string"
          }
        },
        "example": {
          "email": "sabin.khanal.33@gmail.com",
          "password": "appleball",
          "full_name": "sabin khanal"
        }
      },
      "LoginAPIRequest": {
        "title": "Login API Request",
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "example": {
          "email": "sabin.khanal.33@gmail.com",
          "password": "appleball"
        }
      },
      "ForgotPasswordRequest": {
        "title": "Forgot Password Request",
        "required": ["email"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          }
        },
        "example": {
          "email": "sabin.khanal.33@gmail.com"
        }
      },
      "ValidateTokenRequest": {
        "title": "Validate Token Request",
        "required": ["id", "token"],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "token": {
            "type": "string"
          }
        },
        "example": {
          "id": 1,
          "token": "$argon2id$v=19$m=4096,t=3,p=1$JFxvWVFdw8O83Pf3Q8hC0Q$jV6kCrcNh0OZwRYkHGUJ2yle+tvCmBgVsNhAakRstMY"
        }
      },
      "ResetPasswordRequest": {
        "title": "Reset password request",
        "required": ["email", "password", "token"],
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "token": {
            "type": "string"
          }
        },
        "example": {
          "email": "sabin.khanal.33@gmail.com",
          "password": "appleball",
          "token": "$argon2id$v=19$m=4096,t=3,p=1$aUkpdx9MWXwZm6Y01ReRQA$Dd0kOHjURsn20gD14UaDAfxDOtrNvz/lESi+TBwDJHo"
        }
      },
      "UpdateProfileRequest": {
        "title": "Update profile request",
        "required": ["full_name"],
        "type": "object",
        "properties": {
          "full_name": {
            "type": "string"
          }
        },
        "example": {
          "full_name": "KHANAL"
        }
      },
      "UpdatePasswordRequest": {
        "title": "Update password request",
        "required": ["password", "password_again"],
        "type": "object",
        "properties": {
          "password": {
            "type": "string"
          },
          "password_again": {
            "type": "string"
          }
        },
        "example": {
          "password": "appleball",
          "password_again": "appleball"
        }
      },
      "Error": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
